<div class="field field--password">
	<label for="{{name}}" class="field__label">{{label}}</label>
	<div class="field__wrapper">
		<input oninput="signupForm.change (this.name, this.value)" type="password" class="field__input" name="{{name}}" placeholder="{{placeholder}}">
		<span onclick="fieldPassword.toggle(this)" class="field__icon"></span>
	</div>

</div>